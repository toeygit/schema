{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "messageReq": {
      "type": "object",
      "properties": {
        "uniqueId": {
          "type": "string",
          "maxLength": 50,
          "minLength": 1
        },
        "content": {
          "type": "object",
          "properties": {
            "request": {
              "type": "object",
              "properties": {
                "mobilePhone": {
                  "type": "string",
                  "maxLength": 10,
                  "minLength": 10
                },
                "lastFourDigit": {
                  "type": "string",
                  "maxLength": 4,
                  "minLength": 4
                },
                "entity": {
                  "type": "string",
                  "maxLength": 5,
                  "minLength": 1
                },
                "systemName": {
                  "type": "string",
                  "maxLength": 20,
                  "minLength": 1
                }
              },
              "additionalProperties": false,
              "required": [
                "mobilePhone",
                "lastFourDigit",
                "entity",
                "systemName"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "request"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "uniqueId",
        "content"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "messageReq"
  ]
}